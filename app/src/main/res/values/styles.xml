<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bgStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TransparentCompat" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OnboardingDialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="AppTheme.WhiteAccent" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SCSwitch" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#646464</item>
    </style>

    <style name="SCSwitch.Green" parent="SCSwitch">
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/switch_track</item>
    </style>

    <style name="RadioButton.Branded" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">#5e5e62</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dimmedGrey</item>
    </style>

    <style name="TextView" />

    <style name="TextView.Connected" parent="TextView">
        <item name="android:background">@drawable/bg_rounded_grey</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:text">@string/connected</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextView.Drawer" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingStart">22dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditText.Login" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Button" />

    <style name="Button.Green" parent="Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_rounded_green</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextLabel" parent="AppTheme">
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/lightGrey</item>
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/lightGrey</item>
    </style>

</resources>
