<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mobilePrimary</item>
        <item name="colorPrimaryDark">@color/bgStatusBar</item>
        <item name="colorAccent">@color/mobileAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TV.Leanback" parent="Theme.Leanback">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Leanback</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/tv_background</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorPrimary">#4B4B57</item>
        <item name="android:colorBackground">@color/dimmedGrey</item>
        <item name="guidedActionsBackground">@color/tvGuidedActionsBackground</item>
        <item name="guidedActionsBackgroundDark">@color/tvGuidedActionsBackgroundDark</item>
        <item name="colorAccent">@color/tvAccent</item>
        <item name="android:colorControlActivated">?colorAccent</item>
        <item name="android:colorForeground">#4B4B57</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TV.Browse" parent="Theme.Leanback.Browse">
        <item name="android:windowBackground">@drawable/tv_background</item>
        <item name="defaultBrandColor">@color/grey</item>
        <item name="defaultSearchColor">?colorAccent</item>
        <item name="defaultSearchIconColor">@color/white</item>
        <item name="defaultSearchBrightColor">?colorAccent</item>
        <item name="colorAccent">@color/tvAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="OnboardingDialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="SettingsItem">
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="TextView" />

    <style name="TextView.Connected" parent="TextView">
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textAppearance">@style/Proton.Text.Overline.Strong</item>
        <item name="android:text">@string/connected</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="TextView.Drawer" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/Proton.Text.DefaultSmall</item>
    </style>

    <style name="DefaultCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">@dimen/tv_item_size_width</item>
        <item name="android:layout_height">@dimen/tv_item_size_height</item>
    </style>

    <style name="DefaultCardStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="cardBackground">@null</item>
    </style>

    <style name="DefaultCardTheme" parent="Theme.Leanback">
        <item name="imageCardViewStyle">@style/DefaultCardStyle</item>
        <item name="imageCardViewImageStyle">@style/DefaultCardImageStyle</item>
    </style>

    <style name="TvButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/tvButtonBg</item>
        <item name="android:foreground">@drawable/tv_focus_foreground</item>
    </style>

    <style name="TvButtonCTA" parent="TvButton">
        <item name="android:backgroundTint">@color/tvAccent</item>
    </style>

    <style name="TvButtonAlert" parent="TvButton">
        <item name="android:backgroundTint">@color/tvAlert</item>
    </style>

    <style name="ShapeAppearance.Oval" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="TableRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/screen_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/screen_padding_horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TableLabelText" parent="@style/Proton.Text.DefaultSmall.Weak">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="TableValueText" parent="@style/Proton.Text.DefaultSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
    </style>

    <!--
      item_server_switch.xml is included both in regular UI and in notification.
      Notifications should not use the application styles.
      -->
    <style name="ThemeOverlay.ProtonItemServerSwitch" parent="">
        <item name="serverSwitchArrowDrawable">@drawable/ic_arrow_forward</item>
        <item name="serverSwitchLabelTextStyle">@style/Proton.Text.Caption</item>
        <item name="serverSwitchServerTextStyle">@style/Proton.Text.DefaultSmall</item>
    </style>

    <style name="ThemeOverlay.ProtonItemServerSwitch.Notification" parent="">
        <item name="serverSwitchArrowDrawable">@drawable/ic_arrow_forward_grey</item>
        <item name="serverSwitchLabelTextStyle">@style/TextAppearance.Compat.Notification.Info</item>
        <item name="serverSwitchServerTextStyle">@style/TextAppearance.Compat.Notification</item>
    </style>

    <style name="FabMenuLabelStyle">
        <item name="android:background">@drawable/bg_fab_label</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/Proton.Text.DefaultSmall</item>
    </style>

    <style name="SectionHeadlineText">
        <item name="android:textAppearance">@style/Proton.Text.DefaultSmall</item>
        <item name="android:textColor">?attr/proton_text_hint</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SectionHeadlineText.Brand">
        <item name="android:textColor">?attr/brand_norm</item>
    </style>

    <style name="PowerButton" parent="">
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:backgroundTint">@color/power_button_bg</item>
        <item name="android:padding">8dp</item>
        <item name="icon">@drawable/ic_power_off</item>
        <item name="iconTint">?attr/proton_icon_norm</item>
        <item name="rippleColor">@color/power_button_ripple</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Oval</item>
    </style>

    <style name="ProtonSwitch.AlwaysOn">
        <!-- Thumb tint is set programmatically -->
        <item name="android:textColor">?attr/proton_text_norm</item>
        <item name="trackTint">@color/switch_track_always_on</item>
    </style>

    <style name="ThemeOverlay.ProtonSwitchAlwaysOn" parent="">
        <item name="switchStyle">@style/ProtonSwitch.AlwaysOn</item>
    </style>

    <style name="ProtonTheme.Vpn.Mobile">
        <!-- text-disabled has too little contrast for the dark theme, override it with text-hint
             for now. -->
        <item name="proton_text_disabled">?attr/proton_text_hint</item>
        <item name="protonVpnPowerButtonStyle">@style/PowerButton</item>
    </style>

    <!-- An outlined button that isn't green - used for non-positive actions like "Cancel" -->
    <style name="ThemeOverlay.ProtonButton.Neutral" parent="">
        <item name="colorPrimary">?attr/proton_interaction_strong</item>
    </style>

    <style name="ThemeOverlay.ProtonButton.Warning" parent="">
        <item name="colorPrimary">?attr/proton_notification_error</item>
    </style>

</resources>
