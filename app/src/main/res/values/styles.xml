<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mobilePrimary</item>
        <item name="colorPrimaryDark">@color/bgStatusBar</item>
        <item name="colorAccent">@color/mobileAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.ForceDark" parent="AppTheme.NoActionBar">
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <style name="AppTheme.TV.Leanback" parent="Theme.Leanback">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Leanback</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/tv_background</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorPrimary">#4B4B57</item>
        <item name="android:colorBackground">@color/dimmedGrey</item>
        <item name="guidedActionsBackground">@color/tvGuidedActionsBackground</item>
        <item name="guidedActionsBackgroundDark">@color/tvGuidedActionsBackgroundDark</item>
        <item name="colorAccent">@color/tvAccent</item>
        <item name="android:colorControlActivated">?colorAccent</item>
        <item name="android:colorForeground">#4B4B57</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TV.Browse" parent="Theme.Leanback.Browse">
        <item name="android:windowBackground">@drawable/tv_background</item>
        <item name="defaultBrandColor">@color/grey</item>
        <item name="defaultSearchColor">?colorAccent</item>
        <item name="defaultSearchIconColor">@color/white</item>
        <item name="defaultSearchBrightColor">?colorAccent</item>
        <item name="colorAccent">@color/tvAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TransparentCompat" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OnboardingDialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="AppTheme.WhiteAccent" parent="AppTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SCSwitch" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#646464</item>
    </style>

    <style name="SCSwitch.Green" parent="SCSwitch">
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/switch_track</item>
    </style>

    <style name="RadioButton.Branded" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">?colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dimmedGrey</item>
    </style>

    <style name="SettingsItem">
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="TextView" />

    <style name="TextView.Connected" parent="TextView">
        <item name="android:background">@drawable/bg_rounded</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textAppearance">@style/Proton.Text.Overline.Strong</item>
        <item name="android:text">@string/connected</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnPrimarySurface</item>
    </style>

    <style name="TextView.Drawer" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/Proton.Text.DefaultSmall</item>
    </style>

    <style name="EditText.Login" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorAccent">?colorAccent</item>
    </style>

    <style name="Button" />

    <style name="Button.Secondary">
        <item name="android:background">@drawable/button_secondary_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">32sp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Button.Green" parent="Button">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_rounded_accent</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button.Green.Filled" parent="Button.Green">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_rounded_accent_filled</item>
    </style>

    <style name="Button.Green.Borderless" parent="Button.Green">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TextLabel" parent="AppTheme">
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/lightGrey</item>
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/lightGrey</item>
    </style>

    <style name="DefaultCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">@dimen/tv_item_size_width</item>
        <item name="android:layout_height">@dimen/tv_item_size_height</item>
    </style>

    <style name="DefaultCardStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="cardBackground">@null</item>
    </style>

    <style name="DefaultCardTheme" parent="Theme.Leanback">
        <item name="imageCardViewStyle">@style/DefaultCardStyle</item>
        <item name="imageCardViewImageStyle">@style/DefaultCardImageStyle</item>
    </style>

    <style name="SingleLineCardTitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="IconCardTheme" parent="Theme.Leanback">
        <item name="imageCardViewStyle">@style/IconCardViewStyle</item>
        <item name="imageCardViewTitleStyle">@style/IconCardTitleStyle</item>
        <item name="imageCardViewImageStyle">@style/IconCardImageStyle</item>
        <item name="imageCardViewInfoAreaStyle">@style/IconCardInfoAreaStyle</item>
    </style>
    <!-- Icon card style with custom focus handler. Used in cards example. -->
    <style name="IconCardViewStyle" parent="DefaultCardStyle">
        <item name="lbImageCardViewType">Title</item>
    </style>

    <style name="IconCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="IconCardTitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle">
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IconCardInfoAreaStyle" parent="Widget.Leanback.ImageCardView.InfoAreaStyle">
        <item name="android:layout_width">96dp</item>
        <item name="android:background">@null</item>
        <item name="layout_viewType">main</item>
    </style>

    <style name="SingleLineCardInfoAreaStyle" parent="Widget.Leanback.ImageCardView.InfoAreaStyle">
        <item name="android:layout_width">124dp</item>
        <item name="layout_viewType">main</item>
    </style>

    <style name="SingleLineCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">124dp</item>
    </style>

    <style name="SingleLineCardStyle" parent="DefaultCardStyle">
        <item name="lbImageCardViewType">Title</item>
    </style>

    <!-- Theme corresponding to the SingleLineCardStyle -->
    <style name="SingleLineCardTheme" parent="Theme.Leanback">
        <item name="imageCardViewStyle">@style/SingleLineCardStyle</item>
        <item name="imageCardViewTitleStyle">@style/SingleLineCardTitleStyle</item>
        <item name="imageCardViewImageStyle">@style/SingleLineCardImageStyle</item>
        <item name="imageCardViewInfoAreaStyle">@style/SingleLineCardInfoAreaStyle</item>
    </style>

    <style name="TvButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/tvButtonBg</item>
        <item name="android:foreground">@drawable/tv_focus_foreground</item>
    </style>

    <style name="TvButtonCTA" parent="TvButton">
        <item name="android:backgroundTint">@color/tvAccent</item>
    </style>

    <style name="TvButtonAlert" parent="TvButton">
        <item name="android:backgroundTint">@color/tvAlert</item>
    </style>

    <style name="Body1Regular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body2Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body2Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CaptionRegular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TableRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/screen_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/screen_padding_horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TableLabelText" parent="@style/Proton.Text.DefaultSmall.Weak">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="TableValueText" parent="@style/Proton.Text.DefaultSmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="FabMenuLabelStyle">
        <item name="android:background">@drawable/bg_fab_label</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/Proton.Text.DefaultSmall</item>
    </style>

    <style name="SectionHeadlineText">
        <item name="android:textAppearance">@style/Proton.Text.DefaultSmall</item>
        <item name="android:textColor">?attr/proton_text_hint</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SectionHeadlineText.Brand">
        <item name="android:textColor">?attr/brand_norm</item>
    </style>

    <style name="ProtonTheme.Vpn.Mobile">
        <item name="actionMenuTextColor">?attr/brand_norm</item>
        <!-- text-disabled has too little contrast for the dark theme, override it with text-hint
             for now. -->
        <item name="proton_text_disabled">?attr/proton_text_hint</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/proton_icon_norm</item>
    </style>

    <!-- An outlined button that isn't green - used for non-positive actions like "Cancel"
         or "Disconnect". -->
    <style name="ProtonButton.OutlinedButton.Neutral">
        <item name="strokeColor">?attr/proton_interaction_strong</item>
        <item name="android:textColor">?attr/proton_text_norm</item>
    </style>

    <style name="ProtonButton.OutlinedButton.Warning">
        <item name="strokeColor">?attr/proton_notification_error</item>
        <item name="android:textColor">?attr/proton_notification_error</item>
    </style>

</resources>
