<resources>

    <attr name="title" format="string" />

    <declare-styleable name="ProtonCompatTextView">
        <attr name="drawableStart" format="reference" />
        <attr name="drawableTop" format="reference" />
        <attr name="drawableEnd" format="reference" />
        <attr name="drawableBottom" format="reference" />
    </declare-styleable>
    <declare-styleable name="ProtonSwitch">
        <attr name="textTitle" format="string" />
        <attr name="textDescription" format="string" />
        <attr name="dividerHidden" format="boolean" />
        <attr name="switchValue" format="boolean" />
        <attr name="isButton" format="boolean" />
        <attr name="isInfo" format="boolean" />
        <attr name="switchEditable" format="boolean" />
    </declare-styleable>
    <declare-styleable name="NetShieldSwitch">
        <attr name="descriptionText" format="string" />
        <attr name="isInConnectedScreen" format="boolean" />
        <attr name="withReconnectConfirmation" format="boolean" />
    </declare-styleable>
    <declare-styleable name="NetworkFrameLayout">
        <attr name="textLoading" format="string" />
    </declare-styleable>
    <declare-styleable name="SettingsItemBase">
        <attr name="title" />
        <attr name="infoText" format="string" />
        <attr name="android:enabled" />
    </declare-styleable>
    <declare-styleable name="SettingsSwitch">
        <attr name="android:checked" />
    </declare-styleable>
    <declare-styleable name="TroubleshootingInfoView">
        <attr name="title" />
        <attr name="infoText" />
    </declare-styleable>

    <!-- TODO: discuss adding this to designs and moving the attribute to Core -->
    <declare-styleable name="AppTheme">
        <attr name="proton_background_inverted" format="reference" />
    </declare-styleable>
</resources>
