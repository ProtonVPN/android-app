<resources>
    <declare-styleable name="ProtonVpnWidgetPreviewAttrs">
        <attr name="widget_preview_background_secondary" format="color"/>
        <attr name="widget_preview_interaction_norm" format="color"/>
        <attr name="widget_preview_on_interaction_norm" format="color"/>
        <attr name="widget_preview_text_norm" format="color" />
        <attr name="widget_preview_unprotected" format="color" />
    </declare-styleable>

    <style name="Theme.ProtonVpnWidgetPreview" parent="ProtonTheme.Vpn">
        <item name="widget_preview_background_secondary">@color/protonWidgetBackgroundSecondary</item>
        <item name="widget_preview_interaction_norm">?attr/brand_norm</item>
        <item name="widget_preview_on_interaction_norm">@color/white</item>
        <item name="widget_preview_text_norm">?attr/proton_text_norm</item>
        <item name="widget_preview_unprotected">?attr/proton_notification_error</item>
    </style>

    <style name="Theme.ProtonVpnMaterialWidgetPreview" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="widget_preview_background_secondary">@color/glance_colorSecondaryContainer</item>
        <item name="widget_preview_interaction_norm">@color/glance_colorPrimary</item>
        <item name="widget_preview_on_interaction_norm">@color/glance_colorOnPrimary</item>
        <item name="widget_preview_text_norm">@color/glance_colorOnSurface</item>
        <item name="widget_preview_unprotected">@color/glance_colorOnSurfaceVariant</item>
    </style>

</resources>
