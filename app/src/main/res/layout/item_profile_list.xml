<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/screen_padding_horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textServer"
            style="@style/Proton.Text.Default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            tools:text="Coffe shop (Default)" />

        <TextView
            android:id="@+id/textServerNotSet"
            style="@style/Proton.Text.DefaultSmall.Weak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/error_server_not_set" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/profile_edit_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_selectable_item_bg"
        app:srcCompat="@drawable/ic_proton_three_dots_horizontal" />

    <com.protonvpn.android.components.PowerButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/buttonConnect"
        android:layout_marginVertical="4dp" />

    <ImageView
        android:id="@+id/imageWrench"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/listItemMaintenance"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_proton_wrench"
        app:tint="?attr/proton_icon_weak" />

    <ImageView
        android:id="@+id/buttonUpgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:srcCompat="@drawable/vpn_plus_badge"/>
</LinearLayout>
