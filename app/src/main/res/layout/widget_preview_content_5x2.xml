<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/widget_preview_material_5x2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_proton_lock_open_filled_2"
            android:tint="?widget_preview_unprotected" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_status_unprotected"
            android:textColor="?widget_preview_unprotected"
            android:textFontWeight="700"
            android:textSize="14sp"
            android:lineHeight="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="5dp"
        android:paddingVertical="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="3dp"
            android:layout_weight="1"
            android:background="@drawable/widget_button_bg_no_color"
            android:backgroundTint="?attr/widget_preview_background_secondary"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/widget_flag_fastest" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineHeight="16sp"
                android:minHeight="30sp"
                android:text="@string/fastest_country"
                android:textColor="?attr/widget_preview_text_norm"
                android:textFontWeight="600"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="3dp"
            android:layout_weight="1"
            android:background="@drawable/widget_button_bg_no_color"
            android:backgroundTint="?attr/widget_preview_background_secondary"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/widget_flag_us" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineHeight="16sp"
                android:minHeight="30sp"
                android:text="@string/widget_preview_unitedstates"
                android:textColor="?attr/widget_preview_text_norm"
                android:textFontWeight="600"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="3dp"
            android:layout_weight="1"
            android:background="@drawable/widget_button_bg_no_color"
            android:backgroundTint="?attr/widget_preview_background_secondary"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/widget_flag_ch" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineHeight="16sp"
                android:minHeight="30sp"
                android:text="@string/widget_preview_switzerland"
                android:textColor="?attr/widget_preview_text_norm"
                android:textFontWeight="600"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
</merge>
