<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/textTitle"
        style="@style/Proton.Text.Default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_padding_horizontal"
        android:layout_marginTop="12dp"
        android:drawablePadding="20dp"
        app:drawableStartCompat="@drawable/ic_proton_lightbulb"
        app:drawableTint="?attr/proton_notification_warning"
        tools:text="@string/troubleshootNoInternetTitle" />

    <TextView
        android:id="@+id/textDescription"
        style="@style/Proton.Text.DefaultSmall.Weak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="@dimen/screen_padding_horizontal"
        android:layout_marginBottom="12dp"
        tools:text="@string/troubleshootNoInternetDescription" />

    <View style="@style/Divider.Small" />
</merge>
