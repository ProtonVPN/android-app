<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/contentAppbar"
        layout="@layout/content_appbar" />

    <me.proton.core.presentation.ui.view.ProtonInput
        android:id="@+id/inputMtu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_padding_horizontal"
        android:layout_marginTop="24dp"
        android:digits="0123456789"
        android:hint="@string/settingsDefaultMtu"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="4"
        app:label="@string/settingsMtuSizeTitle" />

    <TextView
        android:id="@+id/textDescription"
        style="@style/Proton.Text.Caption.Weak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_padding_horizontal"
        android:soundEffectsEnabled="false"
        android:text="@string/settingsMtuDescription" />

</LinearLayout>
