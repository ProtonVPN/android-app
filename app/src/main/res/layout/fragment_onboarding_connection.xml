<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/onboarding_connection"/>

            <TextView
                style="@style/Proton.Text.Headline"
                android:text="@string/onboarding_connection_title"
                android:textColor="@color/text_norm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/description"
                style="@style/Body1Regular"
                android:text="@string/onboarding_connection_description"
                android:gravity="center"
                android:textColor="@color/text_norm"
                android:breakStrategy="balanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"/>

            <TextView
                style="@style/Body2Regular"
                android:text="@string/onboarding_connection_info"
                android:textColor="@color/text_weak"
                android:gravity="center"
                android:breakStrategy="balanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"/>
        </LinearLayout>
    </FrameLayout>
</layout>
