<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="32dp"
    android:layout_marginLeft="32dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:background="@color/dimmedGrey">

    <Button
        android:id="@+id/buttonResetPassword"
        style="@style/Button.Green"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:text="@string/helpResetPassword" />

    <Button
        android:id="@+id/buttonForgotUser"
        style="@style/Button.Green"
        android:layout_width="match_parent"
        android:layout_margin="6dp"
        android:text="@string/helpForgotUser" />

    <Button
        android:id="@+id/buttonLoginProblems"
        style="@style/Button.Green"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:text="@string/helpCommonProblems" />

    <Button
        android:id="@+id/buttonGetSupport"
        style="@style/Button.Green"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:text="@string/helpGetSupport" />

</LinearLayout>