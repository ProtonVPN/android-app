<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/abc_dialog_padding_top_material">

    <TextView
        android:id="@+id/textMessage"
        style="?attr/materialAlertDialogBodyTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="?attr/dialogPreferredPadding"
        tools:text="R.string.settingsReconnectToChangeDialogContent" />

    <TextView
        android:id="@+id/textLearnMore"
        style="?attr/materialAlertDialogBodyTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="?attr/dialogPreferredPadding"
        android:layout_marginTop="4dp"
        android:drawablePadding="8dp"
        android:text="@string/dialogLearnMore"
        android:textColor="?attr/proton_text_accent"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_proton_arrow_out_square_20"
        app:drawableTint="?attr/proton_icon_accent" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkboxDontShowAgain"
        style="?attr/materialAlertDialogBodyTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="?attr/dialogPreferredPadding"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/Proton.Text.DefaultSmall" />

</LinearLayout>
