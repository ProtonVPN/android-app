<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageEntryCountry"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:visibility="gone"
        tools:src="@drawable/flag_se" />

    <ImageView
        android:id="@+id/imageSCArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_proton_chevrons_right_16"
        app:tint="?attr/proton_icon_accent" />

    <ImageView
        android:id="@+id/imageExitCountry"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        tools:src="@drawable/flag_de" />

    <TextView
        android:id="@+id/textCountry"
        style="@style/Proton.Text.Default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="viewStart"
        tools:text="Server test name" />

</merge>
