<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        app:srcCompat="@drawable/oval"
        app:tint="?attr/serverLoadLow" />

    <TextView
        style="@style/Proton.Text.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_weak"
        android:text="@string/server_load_low"/>

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/oval"
        app:tint="?attr/serverLoadMedium" />

   <TextView
        style="@style/Proton.Text.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_weak"
        android:text="@string/server_load_medium"/>

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/oval"
        app:tint="?attr/serverLoadHigh" />

    <TextView
        style="@style/Proton.Text.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/text_weak"
        android:text="@string/server_load_high"/>
</LinearLayout>
