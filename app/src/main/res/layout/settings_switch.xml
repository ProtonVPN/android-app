<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <com.protonvpn.android.components.SwitchEx
        android:id="@+id/switchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_padding_horizontal"
        android:layout_marginTop="12dp"
        android:duplicateParentState="true"
        android:textAlignment="viewStart"
        tools:text="Some setting" />

    <TextView
        android:id="@+id/textInfo"
        style="@style/Proton.Text.Caption.Hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/screen_padding_horizontal"
        android:layout_marginTop="8dp"
        android:duplicateParentState="true"
        android:visibility="gone"
        tools:text="A longer explanation of what this setting is about, sometimes even more than a single line."
        tools:visibility="visible" />

    <Space
        android:layout_width="0dp"
        android:layout_height="12dp" />

    <View
        android:id="@+id/dividerBelow"
        style="@style/Divider.Small" />
</merge>
